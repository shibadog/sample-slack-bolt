{
    "version": "2.0.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TypeScript",
            "preLaunchTask": "npm: ビルド",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/src/main/typescript/index.ts",
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "env": {
                "NODE_CONFIG_DIR": "${workspaceFolder}/dist/config"
            }
            
        }
    ],
}